<div class="container">  

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Lista de compras</th>
      <th scope="col">Descrição</th>
      <th scope="col">Foi comprado?</th>
      <th scope="col">Funções</th>
    </tr>
  </thead>

  <tbody><% @shopping_lists.each do |shopping_list| %>
    <tr> 
      <th scope="row"></th>

      <td><%= shopping_list.name %></td>

      <td><%= shopping_list.description %></td>

      <td>
        <% if shopping_list.purchased? %>
        <p style="color: green">Sim, finalizado</p>
        <% else %>
        <p style="color: red">Não, pendente</p>
        <% end %>
      </td>

      <td>
        <%= link_to 'Visualizar', shopping_list_path(shopping_list) %>
        <%= link_to 'Editar', edit_shopping_list_path(shopping_list) %>
        <%= link_to 'Deletar', shopping_list_path(shopping_list),
        method: :delete,
        data: { confirm: 'Voce tem certeza disso?' }%>      
      </td>
    </tr>

   <% end %>
   </tbody>
</table>
  <h2 class="text-center">Total de Listas: <%= @shopping_lists.count %></h2>
</div>

